<%= search_form_for @q do |s| %>
    <%= s.label :status_eq, "Estados" %>
    <%= s.select :status_eq, options_for_select(Book.statuses, @q.status_eq), {include_blank: true}, {class: 'form-control'} %>
    <%= s.submit %>
<% end %>

<table class="table">
    <thead>
        <tr>
            <th><%= sort_link(@q, :title) %></th>
            <th>Author</th>
            <th>Status</th>
            <th>Book_lended_on</th>
            <th>Book_returned_on</th>
            <th colspan = "3"></th>
        </tr>
    </thead>
    <tbody>
        <% @book.each do |b| %>
        <tr>
            <td> <%= b.title %> </td>
            <td> <%= b.author %> </td>
            <td> <%= b.status %> </td>
            <td> <%= b.book_lent_on %> </td>
            <td> <%= b.book_returned_on %> </td>
            <td> <%= link_to "Show ", b %> </td>
            <td> <%= link_to "Edit ", edit_book_path(b) %> </td>
            <td> <%= link_to "Destroy", b, method: :delete, data: { confirm: 'Â¿seguro que quiere borrar el libro?'} %> </td>
        </tr>
        <% end %>
    </tbody>
</table>
